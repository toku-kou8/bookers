<h1>Books</h1>
<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'show', book_path(book.id) %></td>
        <td><%= link_to 'edit', {controller: 'books', action:'edit',id: book.id} %></td>
        <td><%= link_to 'delete', {controller: 'books', action: 'destroy', id: book.id}, method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </thread>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
<% if @book.errors.any? %><% end %>
<%= @book.errors.count %>errors prohibited this book from being saved:
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
  <div class="input">
    <label>Title</label>
    <div class='title'><%= f.text_field :title %></div>
    <label>body</label>
    <div><%= f.text_area :body %></div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

